load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

package(default_visibility = ["//:__subpackages__"])  # keep

licenses(["notice"])  # keep

go_library(
    name = "keyderivation",
    srcs = [
        "keyset_deriver.go",
        "prf_based_deriver.go",
    ],
    importpath = "github.com/tink-crypto/tink-go/keyderivation",
    visibility = ["//visibility:public"],
    deps = [
        "//core/registry",
        "//insecurecleartextkeyset",
        "//internal/internalregistry",
        "//keyderivation/internal/streamingprf",
        "//keyset",
        "//proto/tink_go_proto",
    ],
)

go_test(
    name = "keyderivation_test",
    srcs = ["prf_based_deriver_test.go"],
    embed = [":keyderivation"],
    deps = [
        "//aead",
        "//core/registry",
        "//insecurecleartextkeyset",
        "//keyderivation/internal/streamingprf",
        "//proto/aes_gcm_go_proto",
        "//proto/common_go_proto",
        "//proto/hkdf_prf_go_proto",
        "//proto/tink_go_proto",
        "@org_golang_google_protobuf//proto",
    ],
)

alias(
    name = "go_default_library",
    actual = ":keyderivation",
    visibility = ["//visibility:public"],
)
