    name = "streamingprf_test",
    srcs = ["hkdf_streaming_prf_test.go"],
    data = ["@wycheproof//testvectors:all"],
    embed = [":streamingprf"],
    deps = [
        "//subtle/random",
        "//testutil",
    ],
)

alias(
    name = "go_default_library",
    actual = ":streamingprf",
    visibility = ["//visibility:public"],
)
