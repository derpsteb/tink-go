go_test(
    name = "streamingprf_test",
    srcs = [
        "hkdf_streaming_prf_key_manager_test.go",
        "hkdf_streaming_prf_test.go",
    ],
    data = ["@wycheproof//testvectors:all"],
    embed = [":streamingprf"],
    deps = [
        "//core/registry",
        "//proto/aes_gcm_go_proto",
        "//proto/common_go_proto",
